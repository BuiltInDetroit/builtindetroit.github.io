{
  "trailingComma": "es5",
  "singleQuote": true,
  "semi": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": true,
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.css",
      "options": {
        "useTabs": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "useTabs": false
      }
    }
  ],
  "tailwindConfig": "./themes/kaigi/tailwind.config.ts"
}
